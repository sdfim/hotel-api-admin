<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
>
    <testsuites>

        <testsuite name="Feature">
            <directory>tests/Feature</directory>
            <exclude>tests/Feature/API/Local</exclude>
<!--            <exclude>tests/Feature/API/BookingFlow</exclude>-->
        </testsuite>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory>app/Providers</directory>
            <directory>app/Actions</directory>
            <directory>app/Livewire</directory>
            <directory>Modules/AdministrationSuite</directory>
        </include>
        <exclude>
            <directory>app/Livewire/Charts</directory>
            <directory>app/Livewire/Inspectors</directory>
            <file>Modules/AdministrationSuite/Http/Controllers/BookingInspectorController.php</file>
            <file>Modules/AdministrationSuite/Http/Controllers/BookingItemsController.php</file>
            <file>Modules/AdministrationSuite/Http/Controllers/ExceptionsReportChartController.php</file>
            <file>Modules/AdministrationSuite/Http/Controllers/IceHbsiController.php</file>
            <file>Modules/AdministrationSuite/Http/Controllers/MappingExpediaGiatasController.php</file>
            <file>Modules/AdministrationSuite/Http/Controllers/PropertyMappingController.php</file>
            <file>Modules/AdministrationSuite/Http/Controllers/StatisticChartsController.php</file>
            <file>app/Actions/Fortify/CreateNewUser.php</file>
            <file>app/Livewire/IceHbsiPropertyTable.php</file>
        </exclude>
    </source>
    <php>
        <ini name="memory_limit" value="2048M"/>
        <env name="APP_ENV" value="testing"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="CACHE_STORE" value="array"/>
<!--        <env name="DB_DATABASE" value="tests_obe"/>-->
<!--        <env name="SUPPLIER_CONTENT_DB_DATABASE" value="tests_obe_content"/>-->
        <env name="MAIL_MAILER" value="array"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
    </php>
</phpunit>
