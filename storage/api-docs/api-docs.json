{
    "openapi": "3.0.0",
    "info": {
        "title": "UJV API Documentation",
        "version": "1.0.0"
    },
    "paths": {
        "/api/content": {},
        "/api/content/search": {
            "post": {
                "tags": [
                    "Content API"
                ],
                "summary": "Search Hotels",
                "description": "Search for hotels by destination or coordinates.",
                "operationId": "ea91c3820c47ac4933ae8dec40a05430",
                "parameters": [
                    {
                        "name": "type",
                        "in": "query",
                        "description": "Type of content to search (e.g., 'hotel').",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "hotel"
                        }
                    },
                    {
                        "name": "destination",
                        "in": "query",
                        "description": "ID of the destination for the content search.",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 961
                        }
                    },
                    {
                        "name": "rating",
                        "in": "query",
                        "description": "Minimum rating of the content (e.g., 4).",
                        "required": true,
                        "schema": {
                            "type": "number",
                            "example": 4
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page number for pagination (e.g., 1).",
                        "schema": {
                            "type": "integer",
                            "example": 1
                        }
                    },
                    {
                        "name": "results_per_page",
                        "in": "query",
                        "description": "Number of results to return per page (e.g., 250).",
                        "schema": {
                            "type": "integer",
                            "example": 250
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "type": {
                                        "description": "Type of content to search (e.g., 'hotel').",
                                        "type": "string"
                                    },
                                    "destination": {
                                        "description": "ID of the destination for the content search.",
                                        "type": "integer"
                                    },
                                    "rating": {
                                        "description": "Minimum rating of the content (e.g., 4).",
                                        "type": "number"
                                    },
                                    "page": {
                                        "description": "Page number for pagination (e.g., 1).",
                                        "type": "integer"
                                    },
                                    "results_per_page": {
                                        "description": "Number of results to return per page (e.g., 250).",
                                        "type": "integer"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "type": "hotel",
                                    "destination": 961,
                                    "rating": 4,
                                    "page": 1,
                                    "results_per_page": 250
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                },
                "security": [
                    {
                        "apiAuth": []
                    }
                ]
            }
        },
        "/api/content/detail": {
            "get": {
                "tags": [
                    "Content API"
                ],
                "summary": "Delail Hotels",
                "description": "Get detailed information about a hotel.",
                "operationId": "8f91e35b0de03886e343d85976850e9e",
                "parameters": [
                    {
                        "name": "type",
                        "in": "query",
                        "description": "Type of content to search (e.g., 'hotel').",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "hotel"
                        }
                    },
                    {
                        "name": "property_id",
                        "in": "query",
                        "description": "ID of the property to get details for (e.g., 98736411).",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 98736411
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                },
                "security": [
                    {
                        "apiAuth": []
                    }
                ]
            }
        },
        "/api/pricing/search": {
            "post": {
                "tags": [
                    "Price API"
                ],
                "summary": "Search Price Hotels",
                "description": "Endpoint for making a hotel reservation.",
                "operationId": "c75b4cb1d8a7b7d741ee54e92451a0a5",
                "parameters": [
                    {
                        "name": "type",
                        "in": "query",
                        "description": "Type of reservation (e.g., 'hotel').",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "hotel"
                        }
                    },
                    {
                        "name": "checkin",
                        "in": "query",
                        "description": "Check-in date in YYYY-MM-DD format (e.g., '2023-11-11').",
                        "required": true,
                        "schema": {
                            "type": "date",
                            "example": "2023-11-11"
                        }
                    },
                    {
                        "name": "checkout",
                        "in": "query",
                        "description": "Check-out date in YYYY-MM-DD format (e.g., '2023-11-21').",
                        "required": true,
                        "schema": {
                            "type": "date",
                            "example": "2023-11-21"
                        }
                    },
                    {
                        "name": "destination",
                        "in": "query",
                        "description": "ID of the destination for the reservation (e.g., 1175).",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "example": 1175
                        }
                    },
                    {
                        "name": "rating",
                        "in": "query",
                        "description": "Rating of the hotel (e.g., 3.5).",
                        "required": true,
                        "schema": {
                            "type": "number",
                            "example": 3.5
                        }
                    },
                    {
                        "name": "occupancy",
                        "in": "query",
                        "description": "Array of occupancy details. For each guest, specify the number of adults and children.",
                        "required": true,
                        "schema": {
                            "type": "array",
                            "items": {
                                "properties": {
                                    "adults": {
                                        "description": "Number of adults in the room.",
                                        "type": "integer"
                                    },
                                    "children": {
                                        "description": "Number of children in the room.",
                                        "type": "integer"
                                    }
                                },
                                "type": "object"
                            }
                        },
                        "example": [
                            {
                                "adults": 2,
                                "children": 1
                            },
                            {
                                "adults": 1
                            }
                        ]
                    }
                ],
                "requestBody": {
                    "description": "JSON object containing the details of the reservation.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "type": {
                                        "description": "Type of reservation (e.g., 'hotel').",
                                        "type": "string"
                                    },
                                    "checkin": {
                                        "description": "Check-in date in YYYY-MM-DD format (e.g., '2023-11-11').",
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "checkout": {
                                        "description": "Check-out date in YYYY-MM-DD format (e.g., '2023-11-21').",
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "destination": {
                                        "description": "ID of the destination for the reservation (e.g., 1175).",
                                        "type": "integer"
                                    },
                                    "rating": {
                                        "description": "Rating of the hotel (e.g., 3.5).",
                                        "type": "number"
                                    },
                                    "occupancy": {
                                        "description": "Array of occupancy details. For each guest, specify the number of adults and children.",
                                        "type": "array",
                                        "items": {
                                            "properties": {
                                                "adults": {
                                                    "description": "Number of adults in the room.",
                                                    "type": "integer"
                                                },
                                                "children": {
                                                    "description": "Number of children in the room.",
                                                    "type": "integer"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    }
                                },
                                "type": "object"
                            },
                            "example": {
                                "type": "hotel",
                                "checkin": "2023-11-11",
                                "checkout": "2023-11-21",
                                "destination": 1175,
                                "rating": 3.5,
                                "occupancy": [
                                    {
                                        "adults": 2,
                                        "children": 1
                                    },
                                    {
                                        "adults": 1
                                    }
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                },
                "security": [
                    {
                        "apiAuth": []
                    }
                ]
            }
        },
        "/api/content/destinations": {
            "get": {
                "tags": [
                    "Content API"
                ],
                "summary": "Get list of destinations",
                "description": "Get list valid value of destinations by city name, can be used for autocomplete, min 3 characters",
                "operationId": "22ef50fb47b5557afd388640b4257717",
                "parameters": [
                    {
                        "name": "city",
                        "in": "query",
                        "description": "Type of content to search (e.g., 'rome', 'new y', londo').",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "londo"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Unauthenticated"
                    },
                    "403": {
                        "description": "Forbidden"
                    }
                },
                "security": [
                    {
                        "apiAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "apiAuth": {
                "type": "http",
                "description": "authentication token",
                "name": "Token based Based",
                "in": "header",
                "bearerFormat": "JWT",
                "scheme": "bearer"
            }
        }
    }
}